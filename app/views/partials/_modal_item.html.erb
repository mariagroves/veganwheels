<div class="modal__item <%=item.id%>"> 
    <div class="modal__item--text">
        <div class="modal__item--top">
            <h3><%=item.name%></h3>
            <h3 class="price">Â£
            <%=to_pounds(item.price)%>
            </h3>
        </div>
        <div class="modal__item--description">
            <p><%=item.description%></p>
        </div>
        <form class="order-form" id="order-form" accept-charset="UTF-8" data-remote="true" method="post">
        
        <%=hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div>
                <label class="font-weight-bold" for="order_item_options">Options</label>
                
                <% item.menu_options.each_with_index do |option, index| %>
                    <div>
                        <input type="checkbox" name="order_item[order_item_options_attributes][<%=index%>][menu_option_id]" id="order_item_options" value="<%=option.id%>"> <%=option.name%>
                    </div>
                <%end%>
            </div>

            <div>
                <label class="font-weight-bold" for="order_item_note">Special requests</label>
                <div>
                    <textarea name="order_item[note]" id="order_item_note"></textarea>
                </div>
            </div>
            <div>
                <label class="font-weight-bold" for="order_item_quantity">Quantity</label>
            </div>
            <div class="bottom">
                <div class="quantity-select">
                    <div class="button--quantity add"><i class="fas fa-plus"></i></div>
                    <input type="text" name="order_item[quantity]" id="order_item_quantity" value="1">
                    <div class="button--quantity subtract"><i class="fas fa-minus"></i></div>
                </div>
                <button type="submit" class="button button--small">Add to order</button>
                <div class="button button--grey" id="modal-close">Cancel</div>
            </div>
        </form>
    </div>
</div>                       